<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.5"
           xmlns="http://java.sun.com/xml/ns/javaee"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>Team Website</display-name>

  <!-- Servlet Declarations =============================================== -->

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  <!-- Bastille Login servlet                                               -->
  <!--  o Check user credentials                                            -->
  <!--  o Forward to login page or target pages                             -->
  <!--                                                                      -->
  <!-- Initialisation parameters:                                           -->
  <!--                                                                      -->
  <!--  login-page         Path to the login page                           -->
  <!--                     [/login.html]                                    -->
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.pageseeder.bastille.security.LoginServlet</servlet-class>
    <init-param>
      <param-name>login-page</param-name>
      <param-value>/login.html</param-value>
    </init-param>
    <init-param>
      <param-name>default-target</param-name>
      <param-value>/home.html</param-value>
    </init-param>
  </servlet>

  <!-- Servlet Mapping ========================================================================= -->

  <!-- Login servlet -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Welcome files ========================================================================== -->

  <!--
    Welcome file list
    Ensure that your Web Application server allows Servlets to provide Welcome files.
  -->
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>

  <!-- Error Handling ========================================================================= -->

  <!-- 401: Unauthorized -->
  <error-page>
    <error-code>401</error-code>
    <location>/login.html</location>
  </error-page>

</web-app>