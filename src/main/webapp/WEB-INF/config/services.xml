<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE service-config PUBLIC "-//Berlioz//DTD::Services 1.0//EN"
                            "http://www.weborganic.org/schema/berlioz/services-1.0.dtd">
<!--
  Berlioz Service configuration for the Allette team website.

  @author  Christophe Lauret
 -->
 <service-config version="1.0">

  <!-- Data related services -->
  <services group="default">

    <!-- Home page: list indexes -->
    <service id="home" method="get">
      <url pattern="/home"/>
      <generator name="navigation" target="navigation"/>
      <generator class="org.pageseeder.berlioz.bundler.GetWebBundles"  name="bundles"      target="html"/>
      <generator class="org.pageseeder.berlioz.flint.ListIndexes"      name="indexes"      target="main"/>
    </service>

    <!-- Index overview -->
    <service id="overview" method="get">
      <url pattern="/index/{index}"/>
      <generator name="navigation" target="navigation"/>
      <generator class="org.pageseeder.berlioz.bundler.GetWebBundles"  name="bundles"      target="html"/>
      <generator class="org.pageseeder.berlioz.flint.GetIndexStats"    name="index-stats"  target="main"/>
    </service>

  </services>

</service-config>
